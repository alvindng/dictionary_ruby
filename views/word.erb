<h1><%=@word.name()%></h1>
<h3>Definitions</h3>
  <% if @word.definitions() != [] %>
    <ul>
    <% @word.definitions().each do |definition| %>
      <li><%= definition %></li>
    <% end %>
  </ul>
<% end %>

<a href="/words">See Word List</a>
<a href="/words/<%=@word.id()%>/definitions/new">Add a New Definition</a>
